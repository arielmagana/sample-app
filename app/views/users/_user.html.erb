<li class="list-group-item">
    <%= gravatar_for user, size: 50 %>
    <%= link_to user.name, user %>
    <% if current_user.admin? && !current_user?(user) %>
        <div class="card-body">
            <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" }, class:"card-link" %>
        </div>
    <% end %>
</li>