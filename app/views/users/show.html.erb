<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <div class="card border-light">
        <div class="card-body">
          <h3 class="card-title">Microposts <span class="badge badge-pill badge-secondary"><%= @user.microposts.count %></span></h3>
        </div>
        <ol class="list-group list-group-flush microposts">
          <%= render @microposts %>
        </ol>
      </div>
      <%= will_paginate(@microposts, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    <% end %>
  </div>
</div>
